{
  "version": 2,
  "builds": [
    {
      "src": "pythoncoding4u/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "pythoncoding4u/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "pythoncoding4u.settings"
  },
  "buildCommand": "python manage.py collectstatic --noinput && pip install -r requirements.txt"
}
